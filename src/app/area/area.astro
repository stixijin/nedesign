---
import App from '../app.astro';
import MainMenu from '../../widgets/mainMenu/ui/mainMenu.astro';
import areas from "./areas.json";


import type interfacePage from "./intarfaceArea";

type Props = interfacePage;

const {areaName, pageTitle} = Astro.props

const currentArea = areas.find(area => area.area == areaName);


const areaTitle = currentArea.name;
const logoArea = currentArea.logo;
const linkArea = currentArea.link;
const bgArea = currentArea.bgImg;


const title = pageTitle || areaTitle;
---

<App pageTitle={title} bgImg={bgArea}>
    <MainMenu logoLink={linkArea} logoArea={areaTitle}></MainMenu>
</App>

